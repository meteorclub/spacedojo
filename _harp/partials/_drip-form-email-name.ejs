<div class="modal fade drip-modal" tabindex="-1" role="dialog" aria-labelledby="dripModal">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <form class="drip-form" action="<%- dripActionURL %>" method="post">
          <h3 class="drip-headline" data-drip-attribute="headline"><%- dripHeadline %></h3>
          <div class="form-group" data-drip-attribute="description">
            <input type="text" class="form-control" name="fields[full_name]" placeholder="Full Name" />

            <input type="email" class="form-control" name="fields[email]" placeholder="Email Address" />

            <input type="submit" name="submit" value="<%- buttonText %>" class="submit button" data-drip-attribute="sign-up-button" />
          </div>
        </form>
    </div>
  </div>
</div>