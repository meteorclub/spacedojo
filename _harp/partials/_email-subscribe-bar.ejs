<div class="email-subscribe">
	<div class="container">
	<h2 class="headline"><%- dripHeadline %></h2>
		<div class="row">
			<div class="col-xs-12 col-xs-offset-0 col-lg-10 col-lg-offset-1">
				<form action="<%- dripActionURL %>" method="post" class="row">
				  <div class="col-xs-12 col-md-4 col-lg-4">
				    <label class="sr-only control-label">Name</label>
		      	<input type="text" name="fields[full_name]" class="form-control" placeholder="Name" autofocus>
				  </div>
				  <div class="col-xs-12 col-md-5 col-lg-5">
				    <label class="sr-only control-label">Email</label>
		      	<input type="email" name="fields[email]" class="form-control" placeholder="Email Address">
				  </div>
				  <div class="col-xs-12 col-md-3 col-lg-3">
				  	<label class="sr-only control-label" style="display: block;"><%- buttonText %></label>
			      <button type="submit" class="btn btn-default btn-submit full-width"><%- buttonText %></button>
				  </div>
				</form>
			</div>
		</div>
	</div>
</div>
