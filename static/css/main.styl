@import url("http://fonts.googleapis.com/css?family=Roboto:400,300,700,700italic,400italic,300italic");
roboto = "Roboto", sans-serif

*
  margin 0
  padding 0

html,
body
  height 100%

body
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility

img
  max-width 100%

.wrapper
  min-height 100%
  height auto !important
  height 100%
  margin 0 auto -55px
  padding 0

footer,
.push
  height 55px

.index
  margin-top 100px

.navbar
  &.alt
    background none !important
    border none !important
    
    li a
      color #333
      
      /* Small devices (tablets, 768px and up) */
      @media screen and (min-width: 768px) 
        color white !important
      
      &:hover
        background rgba(255,255,255,0.1) !important
    
  background-color #fff !important
  font-family roboto
  text-transform lowercase
  font-weight 700
  border-radius 0
  margin-bottom 0 !important
  // border none !important
  
  .navbar-toggle
    top 7px !important
  
  .navbar-brand
    padding 0 !important
    margin 10px 0 10px
    height 44px
    
    .logo
      height 90%

    /* Small devices (tablets, 768px and up) */
    @media screen and (min-width: 768px) 
      margin 17px 0 0 !important
      .logo
        height 100%
    
    .logo-dark
      display none

.navbar-collapse
  // margin-bottom 0
  border none
  z-index 9999999999 !important
  display block
  border none
  
  .nav
    background #f2f2f2
    border none !important
    margin-top 0
    padding 0 !important
    
    /* Small devices (tablets, 768px and up) */
    @media screen and (min-width: 768px) 
      background transparent
      margin-top 20px
    
    a
      margin 0 0 10px 0 !important


.navbar,
.navbar-default
  height 80px

.navbar li
  margin 2px 0

/* use of important to override bootstrap styles */
.navbar li a
  color #bbb
  padding 8px 20px !important
  border-radius 20px !important
  margin 22px 8px 34px !important
  font-size 14px

.navbar li a:last-child
  margin-right 15px !important

.navbar li a:hover
  background-color #f2f2f2 !important
  color #111

h1, h2, h3, h4, h5, h6
  font-family roboto
  margin 0 0 10px 0
  font-weight 500

  &.clean
    margin 0 !important

h1
  color #333
  line-height 1.3
  font-size 46px
  font-weight 700

h2
  font-size 32px
  
  &.faq
    color lighten(#201730, 5%)
    line-height 1.2

h3
  line-height 1.5
  font-size 28px
h4
  font-size 24px
h5
  font-size 20px
h6
  font-size 18px
  font-weight 700

p
  line-height 1.75
  font-family roboto
  font-size 16px
  color #555
  margin-bottom 20px

p.clean
  margin 0

ul
  line-height 1.75
  font-family roboto
  font-size 16px
  color #555
  margin 20px 0 0 40px

ul li
  margin 10px 0

.divide
  height 1px
  background #ddd
  margin 35px 0 50px
  
  &.small
    width 100px
    margin 0 auto
    text-align center
  
  &.hero
    width 200px
    margin 30px auto
    text-align center
    background white
    opacity .2

a.button
  padding 16px 40px
  background #6b539c
  color #fff !important
  opacity 1 !important
  margin-top 20px
  font-size 20px
  border-radius 30px
  text-decoration none !important
  font-weight 700
  
  &:hover
    text-decoration none
    color white
    background lighten(#6b539c, 13%)
  
  &:active
    position relative
    top 1
    color white
    text-decoration none
  

.home-hero
  padding 0
  // background url('/static/images/1482.jpg')
  background url('/static/images/07.jpg')
  // background url('https://s3.amazonaws.com/amandasaffer/static/images/1482.jpg')
  background-size cover
  // background-position 30% 34%
  background-position 50% 58% !important
  background-attachment fixed
  margin 0px 0 100px 0
  
  .container
    padding-top 180px
    padding-bottom 120px
  
  .subtle
    margin-top 25px
    margin-left 10px
    // display block
    color white
    opacity .6
    font-size 16px
    // letter-spacing 1px
    
    &:hover
      text-decoration none

  .screen
    height 100%
    width 100%
    background rgba(25,22,32,.7)
      
  h1, h2, h4
    color white
  
  h1
    font-size 40px
    margin 0
  h2
    margin 0
    padding 0
    font-size 24px
    font-weight 300
  
  h4
    opacity .8
    line-height 1.45
    font-weight 300
    background rgba(0,0,0,0.1)
    box-shadow 0px 1px 1px 0px rgba(0,0,0,0.15) inset
    padding 15px 25px
    margin 20px 2px 0
    border-radius 50px
    font-size 16px
  
  /* Small devices (tablets, 768px and up) */
  @media screen and (min-width: 768px) 
    h1
      font-size 52px
    h2
      font-size 24px
    h4
      font-size 18px
      padding 10px 20px
  
  /* Medium devices (desktops, 992px and up) */
  @media screen and (min-width: 992px) 
    h1
      font-size 66px
    h2
      font-size 30px
    
  /* Large devices (large desktops, 1200px and up) */
  @media screen and (min-width: 1200px)
    h1
      font-size 72px
    h2
      font-size 36px
    h4
      font-size 24px
      padding 15px 25px
    
.why-spacedojo
  background-color #201730
  background-image url('/static/images/screen_logo2.png')
  background-position 110% 33%
  background-repeat no-repeat
  padding 75px 0 80px
  margin 80px 0
  color white
  
  h5
    opacity .6
    font-weight 300
  
  ul
    margin 20px 0 0
    padding 0
    list-style-type none
    
    li
      color white
      line-height 1.4
      margin 10px 0 30px
      border 1px solid #352f40
      border-radius 5px
      padding 10px
      font-size 14px
      
      /* Medium devices (desktops, 992px and up) */
      @media screen and (min-width: 992px) 
        min-height 106px
        font-size 16px
        padding 20px
        
      
      i
        float left
        opacity .3
        font-size 30px
        margin 3px 15px 10px 0
        
        /* Small devices (tablets, 768px and up) */
        @media screen and (min-width: 768px) 
          margin 5px 10px 75px 0
          font-size 20px
          
        /* Medium devices (desktops, 992px and up) */
        @media screen and (min-width: 992px) 
          margin 20px 20px 20px 0
          font-size 35px
        
        /* Large devices (large desktops, 1200px and up) */
        @media screen and (min-width: 1200px)
          margin 14px 20px 10px 0
      
      &:last-child
        margin-bottom 0
  
ul.how-does-it-work
  list-style-type none
  margin 0
  padding 0
  
  li
    margin-bottom 20px
    background #f2f2f2
    padding 20px 22px
    border-radius 5px

    img
      width 100%
      
      &.kadira
        margin-top 20px
        opacity .85
      
      &.metrics
        margin-top 5px !important
      
      &.codereview
        margin-top 0
        width 100%


.well
  &.pricing
    border-radius 50%
    height 200px
    width 200px
    border none
    cursor auto
    background-color lighten(#d6dce5, 60%)
    box-shadow none
    
    .big, .info
      line-height 1
      margin 0
      display block
      color #2f2448
    .big
      font-size 56px
      font-weight 700
      letter-spacing 1px
      margin 42px 0 0
      
      small
        position relative
        bottom 12px
        font-size 36px
        opacity .4
        margin-right 2px
    .info
      opacity .6
      font-size 24px

.questions
  background-color lighten(#d6dce5, 60%)
  padding-top 75px 
  padding-bottom 75px 
  margin-top 50px

.worklife-logo
  margin-top 40px
  margin-bottom 20px
  opacity .9
  width 60%
  
  /* Small devices (tablets, 768px and up) */
  @media screen and (min-width: 768px) 
    margin-top 60px
    margin-bottom 0
    width 100%

.signup
  margin-top 50px
  // display block
  
  label
    display none
    
  i
    font-size 36px
    position relative
    padding 10px 12px 10px 0px
    bottom 7px
    margin-right 5px !important
    color lighten(#201730, 30%)
    
    /* Medium devices (desktops, 992px and up) */
    @media screen and (min-width: 992px) 
      font-size 32px
      margin-right 13px
    
    /* Large devices (large desktops, 1200px and up) */
    @media screen and (min-width: 1200px)
      margin-right 15px
      display block
  
  input[type=text], input[type=email]
    border none
    box-shadow none
    padding 26px 22px
    background-color lighten(#d6dce5, 60%)
    font-size 20px
    margin-bottom 15px
    margin-right 8px
    text-transform lowercase
  
  button[type=submit]
    padding 12px 26px 11px
    background lighten(#201730, 20%)
    color white
    font-size 20px
    text-transform lowercase
    border none
    box-shadow none
    margin 0 0 15px
    
    &:hover
      background lighten(#201730, 30%)
   
  /* Medium devices (desktops, 992px and up) */
  @media screen and (min-width: 992px) 
    input[type=text], input[type=email]
      font-size 16px
      padding 24px 20px
      margin-right 8px
    button[type=submit]
      font-size 16px
      padding 13px 28px 13px   

  /* Large devices (large desktops, 1200px and up) */
  @media screen and (min-width: 1200px)
    input[type=text], input[type=email]
      font-size 20px
      padding 26px 22px
      margin-right 8px
    button[type=submit]
      font-size 20px
      padding 12px 26px 11px
      

footer
  width 100%
  background-color #201730
  height 55px
  padding-top 15px
  
  p
    font-size 13px
    margin-bottom 10px
    color white
    opacity .6

